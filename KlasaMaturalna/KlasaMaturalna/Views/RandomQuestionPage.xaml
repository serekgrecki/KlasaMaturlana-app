<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KlasaMaturalna.Views.RandomQuestionPage"
             xmlns:Control="clr-namespace:KlasaMaturalna.Controls;assembly=KlasaMaturalna"
             xmlns:ViewModel="clr-namespace:KlasaMaturalna.ViewModels;assembly=KlasaMaturalna"
             Title="Losuj pytanie">
    <ContentPage.BindingContext>
        <ViewModel:RandomQuestionViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
    <StackLayout>
            <Button Text="LOSUJ PYTANIE" FontSize="30" FontAttributes="Bold" IsEnabled="{Binding Enable}" BackgroundColor="#D7393D" Margin="0,150,0,0" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Command="{Binding RandomQustionCommand}"/>
            <ActivityIndicator IsRunning="True" IsVisible="{Binding Visible}"></ActivityIndicator>
    <Control:AdMobView Grid.Row="2" VerticalOptions="FillAndExpand"/>
    </StackLayout>
    </ScrollView>
</ContentPage>