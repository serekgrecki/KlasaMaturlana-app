<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KlasaMaturalna.Views.TodayQuesitonsPage"
             xmlns:ViewModels="clr-namespace:KlasaMaturalna.ViewModels;assembly=KlasaMaturalna"
             Title="Dzisiejsze pytania">
    <ContentPage.BindingContext>
        <ViewModels:TodayQuestionViewModel/>
    </ContentPage.BindingContext>
    <StackLayout Padding="20,20,20,20">
        <Label HorizontalOptions="CenterAndExpand" Text="{Binding TodayDate}"/>
        <Label Text="W czasie trwania egzaminu maturalnego z języka polskiego będzie się tutaj wyświetlała lista pytań na ten dzień"
               IsVisible="{Binding LabelVisable}" HorizontalOptions="Center" VerticalOptions="Center"/>
        <ListView HasUnevenRows="True" ItemsSource="{Binding TodayQuestionList}" ItemSelected="ListView_OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding}" Margin="0,0,0,10"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>
</ContentPage>